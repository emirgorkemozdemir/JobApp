@model JobApp.Models.Posting

@{
    ViewBag.Title = "İlan Detayları";
}

<h2>@Model.Title</h2>

<div>
    <strong>İlan Sahibi:</strong> @Model.Company
</div>
<div>
    <strong>Konum:</strong> @Model.Location
</div>
<div>
    <strong>Yayınlanma Tarihi:</strong> @Model.DatePosted.ToString("dd MMM yyyy")
</div>
<div>
    <strong>İlan Açıklaması:</strong>
    <p>@Model.Description</p>
</div>

<!-- İlan sahibine ait iletişim bilgileri (opsiyonel) -->
@if (Model.Company1.Phone != null)
{
    <div>
        <strong>Telefon:</strong> @Model.Company1.Phone
    </div>
}

@if (Model.Company1.Email != null)
{
    <div>
        <strong>E-posta:</strong> @Model.Company1.Email
    </div>
}
